<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/recyclerViewImage"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/recyclerViewRecipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_start"
            android:layout_toEndOf="@id/recyclerViewImage"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Title goes here"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/prepTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewRecipeTitle"
            android:layout_marginStart="@dimen/text_margin_start"
            android:layout_toEndOf="@id/recyclerViewImage"
            android:text="time goes here" />

        <TextView
            android:id="@+id/healthScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewRecipeTitle"
            android:layout_marginStart="@dimen/text_margin_start"
            android:layout_toEndOf="@id/prepTime"
            android:text="Health Score: 28.5" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prepTime"
            android:layout_marginStart="@dimen/text_margin_start"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/recyclerViewImage"
            android:drawableStart="@drawable/ic_grade"
            android:padding="4dp"
            android:text="socre"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/bottom_text_size" />

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prepTime"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/score"
            android:drawableStart="@drawable/ic_sentiment_satisfied"
            android:padding="4dp"
            android:text="like"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/bottom_text_size" />

        <TextView
            android:id="@+id/sourceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prepTime"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/like"
            android:drawableStart="@drawable/ic_room_service"
            android:padding="4dp"
            android:text="source"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/bottom_text_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
